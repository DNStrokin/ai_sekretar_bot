# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID группы (опционально - бот определит автоматически при добавлении)
# Используйте команду /group_id чтобы узнать ID
TELEGRAM_GROUP_ID=

# Webhook (только для production, в разработке используется polling)
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
USE_POLLING=true

# Database
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5433/sekretar

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (нужен хотя бы один)
OPENAI_API_KEY=sk-your-openai-key-here
GEMINI_API_KEY=your-gemini-key-here

# Application
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production
